@model v2kp.Models.UngCuVien

@{
    ViewBag.Title = "Tạo mới Ứng Cử Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h2 class=" mb-4 text-primary">Thêm ứng cử viên</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <!-- ID -->
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                </div>

                <!-- Đệm -->
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.Dem, "Đệm", htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Dem, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Dem, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <!-- Tên -->
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.Ten, "Tên", htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                </div>
            </div>

            <!-- Trường ẩn cho Khu Vực -->
            <input type="hidden" name="KhuVuc" value="@ViewBag.IDKhuVuc" />

            <!-- Trường ẩn cho Đại Hội -->
            <input type="hidden" name="IDDaiHoi" value="@ViewBag.IDDaiHoi" />

            <div class="d-flex justify-content-between mt-4">
                <!-- Nút thêm mới -->
                <button type="submit" class="btn btn-primary ">Thêm mới</button>

                <!-- Nút quay lại -->
                <a href="@Url.Action("Index", new { iddaihoi = ViewBag.IDDaiHoi, idkhuvuc = ViewBag.IDKhuVuc })" class="btn btn-secondary ">
                    Quay lại
                </a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
