@model v2kp.Models.UngCuVien

@{
    ViewBag.Title = "Xóa Ứng Cử Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-danger">Xác nhận xóa ứng cử viên</h2>

        <h4 class="mt-3">Thông tin ứng cử viên:</h4>
        <hr />

        <dl class="row">
            <dt class="col-md-3">Đệm:</dt>
            <dd class="col-md-9">@Html.DisplayFor(model => model.Dem)</dd>

            <dt class="col-md-3">Tên:</dt>
            <dd class="col-md-9">@Html.DisplayFor(model => model.Ten)</dd>

            <dt class="col-md-3">Đại Hội:</dt>
            <dd class="col-md-9">@ViewBag.DaiHoiName</dd>

            <dt class="col-md-3">Khu Vực:</dt>
            <dd class="col-md-9">@ViewBag.KhuVucName</dd>
        </dl>

        <hr />

        <div class="d-flex justify-content-between mt-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <!-- Các trường ẩn để truyền dữ liệu -->
                <input type="hidden" name="id" value="@ViewBag.ID" />
                <input type="hidden" name="iddaihoi" value="@ViewBag.IDDaiHoi" />
                <input type="hidden" name="idkhuvuc" value="@ViewBag.IDKhuVuc" />

                <!-- Nút xác nhận xóa -->
                <button type="submit" class="btn btn-danger ">
                    Xóa
                </button>
            }

            <!-- Nút quay lại -->
            @Html.ActionLink("Quay lại", "Index", new { iddaihoi = ViewBag.IDDaiHoi, idkhuvuc = ViewBag.IDKhuVuc }, new { @class = "btn btn-secondary " })
        </div>
    </div>
</div>
