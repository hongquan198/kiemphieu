@model IEnumerable<v2kp.Models.ThongTinBaoCao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Back Button -->
    <p>
        @if (Model.Any())
        {
            var firstItem = Model.First();
            <a href="@Url.Action("Index", "Home", new { iddaihoi = firstItem.IDDaiHoi, idkhuvuc = firstItem.KhuVuc })" class="btn-back">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        }
    </p>

    <!-- Card List -->
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-content">
                <div class="field">
                    <span class="label">Tên tổ chức đảng</span>
                    <span class="value">@Html.DisplayFor(modelItem => item.TenToChucDang)</span>
                </div>
                <div class="field">
                    <span class="label">Đại hội lần thứ</span>
                    <span class="value">@Html.DisplayFor(modelItem => item.DaiHoiLanThu)</span>
                </div>
                <div class="field">
                    <span class="label">Nhiệm kì</span>
                    <span class="value">@Html.DisplayFor(modelItem => item.NhiemKy)</span>
                </div>
                <div class="field">
                    <span class="label">Thời gian ghi biên bản:Giờ/phút</span>
                    <span class="value">@Html.DisplayFor(modelItem => item.ThoiGianGhiBienBan)</span>
                </div>
                <div class="field">
                    <span class="label">Thời gian</span>
                    <span class="value">@Html.DisplayFor(modelItem => item.ThoiGian)</span>
                </div>
                <div class="field">
                    <span class="label">Trưởng ban kiểm phiếu</span>
                    <span class="value">@Html.DisplayFor(modelItem => item.TruongBanKiemPhieu)</span>
                </div>
                <div class="field">
                    <span class="label">Thư ký</span>
                    <span class="value">@Html.DisplayFor(modelItem => item.ThuKy)</span>
                </div>
                <div class="divider"></div>
                <div class="edit-button-container">
                    <a href="@Url.Action("Edit", new { iddaihoi = item.IDDaiHoi, idkhuvuc = item.KhuVuc })" class="btn-edit">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                </div>
            </div>
        </div>
    }
</div>

