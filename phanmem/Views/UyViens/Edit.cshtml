@model v2kp.Models.UyVien

@{
    ViewBag.Title = "Sửa thông tin ủy viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4 text-primary">Sửa thông tin ủy viên</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <!-- ID (Hidden) -->
                <input type="hidden" name="ID" value="@Model.ID" />

                <!-- Đệm -->
                <div class="col-md-6 mb-3">
                    @Html.LabelFor(model => model.HoTenUyVien, "Họ và tên", htmlAttributes: new { @class = "form-label" })
                    @Html.EditorFor(model => model.HoTenUyVien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoTenUyVien, "", new { @class = "text-danger" })
                </div>
            </div>

           

            <!--<div class="row">-->
            <!-- Đại Hội (Readonly) -->
            <!--<div class="col-md-6 mb-3">
                @Html.Label("Đại hội", htmlAttributes: new { @class = "form-label" })
                <input type="text" class="form-control" value="@ViewBag.DaiHoiName" readonly />
            </div>-->
            <!-- Khu Vực (Readonly) -->
            <!--<div class="col-md-6 mb-3">
                    @Html.Label("Khu vực", htmlAttributes: new { @class = "form-label" })
                    <input type="text" class="form-control" value="@ViewBag.KhuVucName" readonly />
                </div>
            </div>-->
            <!-- ID Đại Hội và Khu Vực (Hidden) using <input> -->
            <input type="hidden" name="IDDaiHoi" value="@ViewBag.IDDaiHoi" />
            <input type="hidden" name="KhuVuc" value="@ViewBag.IDKhuVuc" />

            <div class="d-flex justify-content-between mt-4">
                <!-- Nút sửa -->
                <button type="submit" class="btn btn-success">Sửa</button>

                <!-- Nút quay lại -->
                <a href="@Url.Action("Index", new { iddaihoi = ViewBag.IDDaiHoi, idkhuvuc = ViewBag.IDKhuVuc })" class="btn btn-secondary ">
                    Quay lại
                </a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
