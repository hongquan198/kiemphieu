@{
    ViewBag.Title = "Home Page";
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f7;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1100px;
        margin: auto;
        padding: 20px;
    }

    .title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }

    .subtitle {
        text-align: center;
        font-size: 1.1rem;
        color: #888;
        margin-bottom: 30px;
    }

    .grid {
        display: flex;
        gap: 20px;
        justify-content: space-around;
        margin-bottom: 40px;
    }

    .card {
        flex: 1;
        padding: 20px;
        color: white;
        border-radius: 8px;
        text-align: center;
        transition: transform 0.2s ease;
        min-width: 220px;
        cursor: pointer;
        font-weight: bold;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-blue {
        background-color: #007bff;
    }

    .card-purple {
        background-color: #6f42c1;
    }

    .card-orange {
        background-color: #fd7e14;
    }

    .icon {
        font-size: 1.5rem;
        margin-bottom: 5px;
        display: inline-block;
    }

    .card-title {
        font-size: 1.2rem;
        margin-bottom: 5px;
    }

    .card-description {
        font-size: 0.9rem;
    }

    .other-functions {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
    }

    .function-grid {
        display: grid; /* Sử dụng CSS Grid */
        grid-template-columns: repeat(2, 1fr); /* Chia thành 3 cột đều */
        gap: 20px; /* Khoảng cách giữa các phần tử */
        margin-bottom: 30px;
    }

    .function-card {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
        color: #333;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .function-card:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .function-card .icon {
            font-size: 1.5rem;
            color: #333;
        }

    .stats {
        display: flex;
        gap: 20px;
        justify-content: space-between;
    }

    .stat-card {
        flex: 1;
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .stat-number {
        font-size: 1.8rem;
        font-weight: bold;
        color: #333;
    }

    .stat-label {
        font-size: 1rem;
        color: #666;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    .card:hover .card-title,
    .card:hover .card-description {
        color: white; /* Đổi màu chữ thành trắng khi hover */
    }

    .btn-back {
        display: inline-block;
        background-color: #007bff;
        color: #fff;
        padding: 10px 15px;
        border-radius: 5px;
        text-align: center;
        margin-bottom: 20px;
    }
</style>

