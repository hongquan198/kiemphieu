@model v2kp.Models.KhuVuc

@{
    ViewBag.Title = "Create New Khu Vực";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center text-success">Tạo khu vực mới</h2>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal shadow p-4 bg-white rounded" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.ID, "ID", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter ID" } })
                    @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.KhuVuc1, "Khu Vực", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.KhuVuc1, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Khu Vực" } })
                    @Html.ValidationMessageFor(model => model.KhuVuc1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-success me-2">Create</button>
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
