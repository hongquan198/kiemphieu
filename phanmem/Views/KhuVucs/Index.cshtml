@model IEnumerable<v2kp.Models.KhuVuc>

@{
    ViewBag.Title = "Danh sách Khu Vực";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Danh sách khu vực</h2>

    <!-- Thêm mới và tìm kiếm -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <form method="get" action="@Url.Action("Create", "KhuVucs")">
                <button type="submit" class="btn btn-success  shadow-sm">
                    Thêm mới
                </button>
            </form>
        </div>

        <form method="get" action="@Url.Action("Index", "KhuVucs")" class="form-inline w-50">
            <div class="form-group w-100 d-flex align-items-center">
                @*<label for="search" class="mr-2 text-muted">Tìm kiếm:</label>*@
                <input type="text" name="search" class="form-control w-75" placeholder="Nhập tên khu vực" value="@Request.QueryString["search"]" />
                <button type="submit" class="btn btn-primary ml-2 shadow-sm">Tìm kiếm</button>
                <a href="@Url.Action("Index", "KhuVucs")" class="btn btn-secondary ml-2 shadow-sm">Reset</a>
            </div>
        </form>
    </div>

    <!-- Bảng danh sách khu vực -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered table-striped shadow-sm">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Khu vực</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.KhuVuc1)</td>
                        <td>
                            @*<a href="@Url.Action("Index", "DaiHois", new { id = item.ID })" class="btn btn-info btn-sm shadow-sm">Xem</a>*@
                            <a href="@Url.Action("Edit", "KhuVucs", new { id = item.ID })" class="btn btn-warning btn-sm shadow-sm ml-2">
                                Sửa
                            </a>

                            <!-- Nút xóa -->
                            <a href="@Url.Action("Delete", "KhuVucs", new { id = item.ID })" class="btn btn-danger btn-sm shadow-sm ml-2"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa không?')">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
