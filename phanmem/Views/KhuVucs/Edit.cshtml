@model v2kp.Models.KhuVuc

@{
    ViewBag.Title = "Edit Khu Vực";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
   

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal shadow p-4 bg-white rounded" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.KhuVuc1,"Tên khu vực", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.KhuVuc1, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Khu Vực" } })
                    @Html.ValidationMessageFor(model => model.KhuVuc1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary me-2">Save</button>
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    </div>
