@model v2kp.Models.KhuVuc

@{
    ViewBag.Title = "Delete Khu Vực";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    
    <p class="text-center text-muted">Bạn có chắc chắn muốn xóa khu vực này ?</p>

    <div class="border rounded p-4 my-3 bg-light shadow-sm">
        <dl class="row">
            <dt class="col-sm-3 text-secondary">
                Khu vực
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.KhuVuc1)
            </dd>
        </dl>
    </div>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "text-center" }))
    {
        @Html.AntiForgeryToken()

        <div class="mt-4">
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
