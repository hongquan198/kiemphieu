                                @Html.Hidden("iddaihoi", item.IDDaiHoi)
                                @Html.Hidden("idkhuvuc", item.KhuVuc)
                                <input type="hidden" name="soban" id="sobanInput_2" value="" />
                                <button type="button" class="btn btn-outline-secondary w-100" id="previewButton_2">
