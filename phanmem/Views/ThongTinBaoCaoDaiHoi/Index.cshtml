                        </form>
                    </div>
                    <div class="col px-1">
                        <form action="@Url.Action("KetQuaKiemPhieuBauCuView", "ThongTinBaoCaos")" method="post" target="_blank" class="mx-1">
                            @Html.Hidden("iddaihoi", item.IDDaiHoi)
                            @Html.Hidden("idkhuvuc", item.KhuVuc)
