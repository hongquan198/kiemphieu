                            <form action="@Url.Action("KhaiBao", "ThongTinBaoCaos")" method="post" class="mx-1">
                                @Html.Hidden("iddaihoi", item.IDDaiHoi)
                                @Html.Hidden("idkhuvuc", item.KhuVuc)
