                                @Html.Hidden("iddaihoi", item.IDDaiHoi)
                                @Html.Hidden("idkhuvuc", item.KhuVuc)
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fa fa-download"></i> Tải về khai báo
                                </button>
